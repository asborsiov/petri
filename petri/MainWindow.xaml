        <Image x:Name="pg" Height="1000" Width="1000" Margin="26,26,242,0" VerticalAlignment="Top" Source="{Binding CurrentPgImage}" RenderOptions.BitmapScalingMode="LowQuality" >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>

                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        


    </Grid>
</Window>
